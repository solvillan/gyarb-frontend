<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE :noop SYSTEM "../lml.dtd">
<:noop>
    <:log>Init menu window</:log>
    <window growx="true" growy="true" id="profileRoot" movable="false">
    <verticalgroup groupalign="center" align="center">
        <window movable="false">
            <label>$getName</label>
            <!-- More info, like statistics and such -->
        </window>
        <horizontalgroup>
                <window movable="false">
                    <label>Friends</label>
                    <list id="friends">
                    </list>
                </window>
                <window movable="false">
                    <table onecolumn="true">
                        <label>Players</label>
                        <textfield id="search" onchange="getPlayers" message="Search" />
                        <scrollpane>
                            <list id="players">
                            </list>
                        </scrollpane>
                    </table>
                </window>
        </horizontalgroup>
    </verticalgroup>
    </window>
</:noop>