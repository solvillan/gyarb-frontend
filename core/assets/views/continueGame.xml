<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE :noop SYSTEM "../lml.dtd">
<:noop>
    <:log>Init continue game window</:log>
    <window growx="true" growy="true" id="continueRoot" movable="false">
            <:row>
                <label>Games</label>
                <label id="gameName"></label>
            </:row>
            <:row>
                <scrollpane grow="true"><list growx="true" growy="true" align="center" id="gamelist" onclick="previewGame"></list></scrollpane>
                <list minwidth="500" growx="true" growy="true" id="gamePlayers"></list>
            </:row>
            <:row>
                <button align="center" growx="true" onclick="back">Back</button>
                <button align="center" id="goBtn" growx="true" onclick="goToGame" disabled="true">Go!</button>
            </:row>
    </window>
</:noop>