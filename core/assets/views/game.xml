<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE :noop SYSTEM "../lml.dtd">
<:noop>
    <:log>Init menu window</:log>
    <horizontalgroup growx="true" id="container" fillparent="true">
        <window id="controls" movable="false" filly="true">
            <verticalgroup grow="true">
                <textarea id="messages" growy="true">

                </textarea>
                <horizontalgroup growx="true">
                    <button onclick="submit">Submit</button>
                    <button onclick="back">Back</button>
                </horizontalgroup>
            </verticalgroup>
        </window>
        <window id="gameWindow" movable="false">
        </window>
    </horizontalgroup>
</:noop>