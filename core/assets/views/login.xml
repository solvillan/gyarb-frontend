<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE :noop SYSTEM "../lml.dtd">
<:noop>
    <:log>Init login window</:log>
    <window id="loginWindow">
        <table onecolumn="true">
            <label>Login</label>
            <textfield minwidth="300" onchange="updateEmail" message="E-mail" id="email"/>
            <textfield growx="true" onchange="updatePass" message="Password" passwordmode="true" passwordchar="*" />
            <button growx="true" onclick="login">Login</button>
        </table>
    </window>
    <dialog visible="false" id="errorDialog" alpha="1">
        <label id="errorMessage"/>
        <textbutton onresult="closeError" growx="true">Ok</textbutton>
    </dialog>
</:noop>

